datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

/**
 * ===========================
 * MMID Directory Model
 * ===========================
 */
model MmidEntry {
  uuid            String    @id
  username        String
  guild           String?
  status          String?
  rank            String?
  typeOfCheating  String[]
  reviewedBy      String?
  confidenceScore Int?
  redFlags        String[]
  notesEvidence   String?
  lastUpdated     DateTime?
  nameMcLink      String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  proposals       MmidEntryProposal[]
  votes           MmidEntryVote[]
  usernameHistory MmidUsernameHistory[]

  @@index([username])
  @@index([status])
  @@index([guild])
}

model MmidEntryVote {
  id        String   @id @default(cuid())
  entryUuid String
  userId    String
  value     Int      // +1 = upvote, -1 = downvote
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  entry MmidEntry @relation(fields: [entryUuid], references: [uuid], onDelete: Cascade)
  user  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([entryUuid, userId])
  @@index([entryUuid])
  @@index([userId])
}

model MmidUsernameHistory {
  id        String   @id @default(cuid())
  entryUuid String
  entry     MmidEntry @relation(fields: [entryUuid], references: [uuid], onDelete: Cascade)
  username  String
  changedAt DateTime @default(now())

  @@index([entryUuid, changedAt])
}

/// Cached snapshots of Hypixel Murder Mystery leaderboards so that
/// user-facing pages can read from our own database instead of hitting
/// the Hypixel API on every request.
model HypixelMmLeaderboardSnapshot {
  id        String   @id @default(cuid())
  stat      String   // "wins" | "kills" (matches MmStatType in code)
  scope     String   // "weekly" | "monthly" | "alltime" (MmTimeScope)
  dataJson  Json     // Serialized MmLeaderboardRow[]
  fetchedAt DateTime @default(now())

  @@index([stat, scope, fetchedAt])
}

/// Cached snapshot of per-player Hypixel data for MMID directory use.
///
/// This lets us avoid hitting the Hypixel API on every directory view
/// while still allowing relatively fresh stats when maintainers run a
/// Hypixel check for a given entry.
model HypixelPlayerSnapshot {
  /// Player UUID (no dashes, lowercase)
  uuid        String   @id

  /// Raw Hypixel /player payload for this uuid.
  playerJson  Json

  /// Optional raw Hypixel /guild payload for this player.
  guildJson   Json?

  /// Pre-extracted Murder Mystery stats that we care about for MMID
  /// directory cards. This is a small, denormalised subset of
  /// `playerJson.stats.MurderMystery`.
  mmStatsJson Json?

  /// When this snapshot was last refreshed from Hypixel.
  fetchedAt   DateTime @default(now())
}

/// Cached snapshots of Mojang + OptiFine skin/cape data for a player.
///
/// Each row represents a single fetch against Mojang's session server
/// (for SKIN + CAPE textures) plus an OptiFine cape probe. We keep a
/// small history per UUID so the UI can show recent skins/capes.
model MinecraftProfileSnapshot {
  id              String   @id @default(cuid())

  /// Player UUID (no dashes, lowercase)
  uuid            String

  /// Username that was active when this snapshot was taken.
  username        String

  /// Direct Mojang texture URLs from the decoded "textures" payload.
  skinUrl         String?
  mojangCapeUrl   String?

  /// If present, OptiFine cape image URL for this username.
  optifineCapeUrl String?

  /// Raw decoded Mojang textures payload for debugging / future use.
  texturesJson    Json?

  fetchedAt       DateTime @default(now())

  @@index([uuid, fetchedAt])
}

/**
 * ===========================
 * Proposals / Review Flow
 * ===========================
 */
enum ProposalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ProposalAction {
  CREATE
  UPDATE
  DELETE
}

model MmidEntryProposal {
  id            String         @id @default(cuid())
  action        ProposalAction
  status        ProposalStatus @default(PENDING)
  targetUuid    String?
  target        MmidEntry?     @relation(fields: [targetUuid], references: [uuid], onDelete: SetNull)
  proposedData  Json
  proposerId    String
  proposer      User           @relation("ProposalProposer", fields: [proposerId], references: [id], onDelete: Cascade)
  reviewedById  String?
  reviewedBy    User?          @relation("ProposalReviewedBy", fields: [reviewedById], references: [id])
  reviewComment String?
  reviewedAt    DateTime?
  appliedAt     DateTime?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([status])
  @@index([targetUuid])
  @@index([proposerId])
  @@index([createdAt])
}

/**
 * ===========================
 * Audit Log (Admin-only)
 * ===========================
 */
enum AuditAction {
  PROPOSAL_CREATED
  PROPOSAL_APPROVED
  PROPOSAL_REJECTED
  ENTRY_CREATED
  ENTRY_UPDATED
  ENTRY_DELETED
  USER_ROLE_CHANGED
  AUTH_SIGNIN
  FORUM_THREAD_CREATED
  FORUM_THREAD_UPDATED
  FORUM_THREAD_DELETED
  FORUM_THREAD_LOCKED
  FORUM_THREAD_UNLOCKED
  FORUM_THREAD_PINNED
  FORUM_THREAD_UNPINNED
  FORUM_POST_CREATED
  FORUM_POST_UPDATED
  FORUM_POST_DELETED
}

model AuditLog {
  id         String      @id @default(cuid())
  action     AuditAction
  actorId    String?
  actor      User?       @relation("AuditActor", fields: [actorId], references: [id])
  targetType String?
  targetId   String?
  meta       Json?
  ip         String?
  userAgent  String?
  createdAt  DateTime    @default(now())

  @@index([createdAt])
  @@index([action])
  @@index([targetType, targetId])
  @@index([actorId])
}

/**
 * ===========================
 * Auth (NextAuth v4) Models
 * ===========================
 */
enum Role {
  USER
  MAINTAINER
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  role      Role    @default(USER)
  discordId String? @unique

  // Privacy / profile preferences
  showVoteHistoryOnProfile Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts Account[]
  sessions Session[]

  proposalsAuthored MmidEntryProposal[] @relation("ProposalProposer")
  proposalsReviewed MmidEntryProposal[] @relation("ProposalReviewedBy")

  auditLogs  AuditLog[]    @relation("AuditActor")
  entryVotes MmidEntryVote[]

  forumThreads ForumThread[]
  forumPosts   ForumPost[]
}

/**
 * ===========================
 * Forum Models
 * ===========================
 */

model ForumThread {
  id             String   @id @default(cuid())
  title          String
  body           String
  authorId       String
  author         User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  isAnnouncement Boolean  @default(false)
  isLocked       Boolean  @default(false)
  isPinned       Boolean  @default(false)
  views          Int      @default(0)
  replyCount     Int      @default(0)
  lastActivityAt DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  replies ForumPost[]

  @@index([isAnnouncement, isPinned, lastActivityAt])
  @@index([authorId])
}

model ForumPost {
  id        String   @id @default(cuid())
  threadId  String
  thread    ForumThread @relation(fields: [threadId], references: [id], onDelete: Cascade)
  authorId  String
  author    User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([threadId, createdAt])
  @@index([authorId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

